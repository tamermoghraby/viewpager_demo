<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    >

    <LinearLayout
        android:id="@+id/llWelcomeData"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:translationZ="5dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        >

        <TextView
            android:id="@+id/txtWelcomeData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+2GB welcome data"
            android:fontFamily="@font/stcforward_bold"
            android:textSize="@dimen/font_size_xxlarge"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:padding="8dp"
            />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <LinearLayout
                    android:id="@+id/llBestSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/best_seller_shape"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:translationZ="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivFireIcon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginEnd="5dp"
                        android:layout_gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/txtBestSeller"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/fire_icon"
                        />


                    <TextView
                        android:id="@+id/txtBestSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_xlarge"
                        android:fontFamily="@font/stcforward_bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:text="Bestseller"/>

                </LinearLayout>


            <ImageView
                android:id="@+id/ivCover"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image3" />

            <LinearLayout
                android:id="@+id/llRewardsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="rewards+"
                    android:layout_marginLeft="25dp"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="@font/stcforward_bolditalic"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_xlarge"
                    android:background="@drawable/rewards_shape"
                    />

            <LinearLayout
                android:id="@+id/llRewardsImages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:outlineSpotShadowColor="@color/indigo"
                android:background="@drawable/rounded_shape_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginEnd="-10dp"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image4" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="-10dp"
                    app:cardCornerRadius="100dp"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image2"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="100dp"
                    android:layout_marginEnd="-10dp"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image1"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="-10dp"
                    app:cardCornerRadius="100dp"
                    android:background="@drawable/full_rounded_white"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/image3"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="100dp"
                    android:layout_gravity="center"
                    android:translationZ="3dp"
                    android:background="@drawable/full_rounded_white"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25+"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/indigo"
                        android:fontFamily="@font/stcforward_bold"
                        android:textSize="@dimen/font_size_xlarge"
                        />

                </LinearLayout>



            </LinearLayout>

            </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/llInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <!-- Item 1 -->
                <LinearLayout
                    android:id="@+id/llPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivPrice"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mobile_icon" />

                    <TextView
                        android:id="@+id/txtPriceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/stcforward_bold"
                        android:text="BD 12.500"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_xxlarge" />

                    <TextView
                        android:id="@+id/txtPriceTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/stcforward_medium"
                        android:text="Price"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llValidity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivValidity"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_calendar_filter" />

                    <TextView
                        android:id="@+id/txtValidityValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/stcforward_bold"
                        android:text="30 days"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_xxlarge" />

                    <TextView
                        android:id="@+id/txtValidityTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/stcforward_medium"
                        android:text="Validity"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llData"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivData"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/wifi_icon" />

                    <TextView
                        android:id="@+id/txtDataValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/stcforward_bold"
                        android:text="50 GB"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_xxlarge" />

                    <TextView
                        android:id="@+id/txtDataTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/stcforward_medium"
                        android:text="Data"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/font_size_large" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btnAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/ripple_pink"
                android:fontFamily="@font/stcforward_bold"
                android:paddingVertical="15dp"
                android:text="Buy Now"
                android:textAlignment="center"
                android:textColor="@color/pink"
                android:textSize="@dimen/font_size_xxxlarge" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>

